<% content_for :title do %>Content<% end %>
<h2>Tags</h2>

<table width=100%>
  <tr>
    <th>Created</th>
	<th>Name</th>
	<th>Pages</th>
	<th>Blocks</th>
  </tr>

<% @tags.each do |tag| %>
  <tr>
    <td valign="top"><%=h tag.created_at.strftime("%H:%M on %b %d, %Y") %></td>
		<td><%=h tag.name %></td>
		<td><%=raw page_list(tag) %></td>		
		<td><%= tag.blocks.count %></td>
		<td><%= link_to 'Show', tag %> <%= link_to 'Edit', edit_content_tag_path(tag) %> <%= link_to 'Destroy', tag, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Tag', new_content_tag_path %>