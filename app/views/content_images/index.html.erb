<% content_for :title do %> Content - Images<% end %>
<h2>Images</h2>

<table width=100%>
  <tr>
    <th>Image</th>
    <th>Created</th>
	 <th></th>
  </tr>

<% @images.each do |image| %>
  <tr>
    <td><%= link_to(image_tag(image.data.url(:small), size: image.data.image_size(:small)), image) %>
    <td valign="top"><%=h image.created_at.strftime("%H:%M on %b %d, %Y") %></td>
    <td><%= link_to 'Edit', edit_content_image_path(image) %> <%= link_to 'Destroy', image, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New File', new_content_image_path %>