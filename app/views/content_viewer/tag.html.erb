<% content_for :title do %><%= Mortiscms.config.site_name %> - <%= @tag.name.capitalize %><% end %>
<% content_for :header do %>
<%= auto_discovery_link_tag(:rss, {:format => :xml}, {:title => "#{Mortiscms.config.site_name} - RSS feed - #{@tag.name.capitalize}"}) %>
<% end %>
<% for block in @tag.blocks %>
<%= link_to(block.updated_at.strftime("%H:%M on %b %d, %Y"), :action => "content", :id => block.id) %>
<blockquote>
<%= block.summary %>
</blockquote>
<% end %>