<%= form_for @content_page do |f| %>
	<% if @content_page.errors.any? %>
	  <div id="error_explanation">
	    <h2><%= pluralize(@content_page.errors.count, "error") %> prohibited this content_page from being saved:</h2>

	    <ul>
	    <% @content_page.errors.full_messages.each do |msg| %>
	      <li><%= msg %></li>
	    <% end %>
	    </ul>
	  </div>
	<% end %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
	<p>
		<%= f.label :order_index, "Ordering" %>
		<%= f.text_field :order_index %>
	</p>
  <p>
    <%= f.label :home, "Page is Home Page:" %><br />
    <%= f.check_box :home %>
  </p>
  <p>
    <%= f.label :navbar, "Page is in Nav Bar:" %><br />
    <%= f.check_box :navbar %>
  </p>
	<p>
    <%= f.label :content_block_id, "Block for this Page: " %><br />
    <%= f.select :content_block_id, ContentBlock.all.collect {|p| [ "#{p.title}", p.id ] }, {:include_blank => 'No Block'} %>
	</p>
	<p>
    <%= f.label :content_tag_id, "Tag for this Page:" %><br />
    <%= f.select :content_tag_id, ContentTag.all.collect {|p| [ "#{p.name}", p.id ] }, {:include_blank => 'No Tag'} %>
	</p>
  <p>
    <%= f.label :controller, "Page is: " %> 
    <%= f.text_field :controller  %> action: <%= f.text_field :action %>
  </p>
  <p><%= f.submit "Submit" %></p>
<% end %>
